<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sacramento&display=swap"
      rel="stylesheet"
    />
    <link href="./output.css" rel="stylesheet" />
  </head>
  <body class="bg-bodyBg">
    <!-- Add User Page -->
    <img src="data:image/jpg;base64,<%= locals.image %>" class="w-20 h-20 object-cover rounded-[50%] absolute right-2 top-4" alt="Profile Picture">

    <!-- Mobile Sidebar Toggle Button -->
    <button id="menuToggle" onclick="showSideBar()" class="lg:hidden z-20 fixed top-5 left-8 bg-hoverBg hover:bg-blue-500 transition-all duration-200 hover:p-2  p-1 rounded-2xl">
      <span class="material-symbols-outlined text-4xl">menu</span>
  </button>
  <% if (locals.success) { %>
    <div
  id="successMessage"
  class="text-yellow-400 bg-black p-2 rounded-lg cursor-pointer ease-in-out lg:text-2xl absolute top-[4%] right-[45%] opacity-100 transition-opacity duration-1000"
>
  Notes Added Successfully!
</div>
  <% } %>

  <% if (locals.error) { %>
    <div
  id="successMessage"
  class="text-red-400 bg-black p-2 rounded-lg cursor-pointer ease-in-out lg:text-2xl absolute top-[4%] right-[45%] opacity-100 transition-opacity duration-1000"
>
  You've already made notes about this book 
</div>
  <% } %>
 

    <!-- Sidebar-->
    <%- include('partials/sidebar') %>

    <!--Container for Welcome -->
    <div class="flex flex-col lg:flex-row justify-between items-center md:w-11/12  lg:px-32 lg:py-10 py-20 mx-auto ">
      
    <div class="xl:w-full mx-auto font-poppins ">
      <h1 class="text-white lg:text-6xl text-3xl  font-bold p-5">Welcome To Book Notes !</h1>
      <h3 class="text-gray-200 lg:text-4xl text-3xl p-5">Book Summary</h3>

        <!--Form Container-->
        <div class="xl:p-6   lg:max-w-4xl   ">
  <div class="bg-formBg font-semibold p-8 rounded-xl lg:max-w-[90%]  flex flex-col items-center  justify-center gap-8 mt-8 ">
    <h1 class="md:text-4xl  text-2xl rounded-lg text-white text-center">Add Book Notes</h1>

    <div class="flex flex-col lg:w-[100%]     gap-8 ">
        <form action="fetchBooks" method="get" id="myForm" class="flex flex-col w-[90%] mx-auto  gap-8">
            <input type="text" name="book" id="inputBooks" placeholder="Search Books" class="bg-bodyBg sm:text-xl outline-none p-4 lg:text-3xl text-white rounded-lg">
        
            <input type="submit" value="Search Book" id="submit" class="bg-hoverBg py-4 rounded-full sm:text-xl cursor-pointer xl:text-2xl font-bold text-white">    
      
          </form>
          <% if (locals.books) { %>
          <form action="fetchBooks" method="post" class="flex flex-col w-[90%] mx-auto  gap-8" onsubmit="updateBookDetails()">
                  <select name="bookId" id="bookSelect" class="p-2 rounded-lg bg-lightGray" >
                       <% books.forEach(book => { %>
                           <option value="<%=book.GoogleBookId%>" title="<%=book.title%>" ISBN="<%=book.ISBN%>" authorName="<%=book.authorName%>"><%= book.title %></option>
                       <% }) %>
                    </select> 
                    <select id="rating" name="rating" class="p-2 rounded-lg bg-lightGray" required>
                        <option value="1">1 - Poor</option>
                        <option value="2">2 - Fair</option>
                        <option value="3" selected>3 - Good</option>
                        <option value="4">4 - Very Good</option>
                        <option value="5">5 - Strongly Suggested</option>
                      </select>
                        <input type="hidden" name="title" id="hiddenTitle">
                        <input type="hidden" name="authorName" id="hiddenAuthor">
                        <input type="hidden" name="ISBN" id="hiddenISBN">

                           <textarea  name="notes" id="notes"  class="bg-bodyBg h-52 outline-none p-2 text-white rounded-lg" placeholder="Write Your Notes Here" required></textarea>     
                       <input type="submit" value="Save Notes" id="submit" class="bg-hoverBg py-4 rounded-full sm:text-xl cursor-pointer xl:text-2xl font-bold text-white">
                       <% } %>
          </form>
    </div>
   
  </div>
</div>
    </div>
   
    <div class=" lg:border lg:border-y-0 lg:border-r-0 lg:border-gray-600 lg:mt-24 mt-8  md:px-8 ">
      <div class="card md:w-96 w-[100%]  bg-lightGray p-8 rounded-xl flex flex-col gap-4 ">
        <h2 class="font-bold text-3xl leading-loose">Book Notes Library</h2>
        <p class="text-gray-800 text-xl">Summarize Your Favorite Books Here</p>
        <button class="rounded-2xl text-xl font-bold bg-white py-2 ">Create</button>
      </div>
      <%const topRatedBooks = notes.filter((note)=> note.rating > 3) ;
      if (topRatedBooks.length > 0) {  %>
      
      <h2 class=" text-2xl font-bold text-white my-5">Top Rated</h2>
      <% topRatedBooks.forEach(note => { %>
      <div class="card flex justify-center   bg-lightGray p-3 max-w-96 rounded-lg my-3">
        <div class="flex justify-evenly items-center">
          <img src="https://books.google.com/books/content?id=<%=note.google_bookid%>&printsec=frontcover&img=1&zoom=1&edge=curl&source=gbs_api" alt="" class="w-12 h-12 object-cover rounded-full ">
          <h3 class="text-2xl font-bold"><%=note.title%></h3></div>
      </div>
      <% }) %>
      <%} else {%> 
        <h3 class="text-2xl font-bold text-white mt-3">No Top Rated Books</h3></div>
        <%}%>
  </div>
<script>
  function updateBookDetails(){
    const bookSelect = document.getElementById("bookSelect")
    const selectedOption = bookSelect.options[bookSelect.selectedIndex]

    const title = selectedOption.getAttribute("title")
    const authorName = selectedOption.getAttribute("authorName")
    const ISBN = selectedOption.getAttribute("ISBN")

    document.getElementById("hiddenTitle").value = title
    document.getElementById("hiddenAuthor").value = authorName
    document.getElementById("hiddenISBN").value = ISBN
  }
  setTimeout(() => {
  const message = document.getElementById("successMessage");
  message.classList.remove("opacity-100"); // Removes the fully visible state
  message.classList.add("opacity-0"); // Adds the fade-out effect

  // Optional: Remove the element from the DOM after the transition ends
  setTimeout(() => {
    message.remove();
  }, 1000); // Match this time with the duration in Tailwind (1000ms)
}, 5000); // Wait 5 seconds before fading out


</script>
  </body>
</html>
